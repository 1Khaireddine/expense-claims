<tr id="<%= dom_id expense %>">
  <td>
    <%= expense.id %>
  </td>
  <td>
    <%= expense.user.decorate.full_name %>
  </td>
  <td>
    <%= expense.expense_date %>
  </td>
  <td>
    <%= expense.description %>
  </td>
  <td>
    <%= expense.formatted_amount %>
  </td>
  <td>
    <%= expense.approval_status %>



  </td>
  <td>
    <div class='d-flex'>
      <% unless expense.approved %>
<%= link_to "Approve", approved_expense_path(expense), class: ' btn btn-warning btn-sm me-2', data: { confirm: 'Are you sure you want to approve this expense?' } %>
    <% end %>
      <%= link_to "Show", expense, class:'btn btn-primary btn-sm me-2' %>
      <%= link_to "Edit", edit_expense_path(expense), class:'me-2 btn btn-success btn-sm' %>
      <%= button_to "Destroy", expense, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this expense?' } %>
    </div>
  </td>
</tr>